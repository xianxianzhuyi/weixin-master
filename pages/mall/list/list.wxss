@import "../pro/pro-template.wxss";
.container {
  background: #f2f2f2;
}
.sorts {
  width: 100%;
  display: flex;
  padding: 10rpx;
  font-size: 0;
  height: 60rpx;
  line-height: 60rpx;
  background: #fff;
  border-bottom: 1px solid #ddd;
}
.sorts view {
  flex: 1;
  display: block;
  text-align: center;
  font-size: 14px;
  position: relative;
}
.s-active:after {
    background: url('data:image/png;base64,');
    background-size: 20rpx 22rpx;
    content: "";
    display: inline-block;
    width: 20rpx;
    height: 22rpx;
    margin-left: 8rpx;
    position: absolute;
    right: 60rpx;
    top: 21rpx;
}
.pro-template {
  display: flex;
  flex-flow: row wrap;
  width: 100%;
  font-size: 12px;
  line-height: 16px;
  color: #666;
  padding: 10rpx 0;
  justify-content:space-around;
}
