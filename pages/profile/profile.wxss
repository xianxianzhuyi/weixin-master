/* pages/profile/profile.wxss */
.userbg {
  width:100%;
  height:320rpx;
}
.user-avatar {
  position: absolute;
  top: 20rpx;
  left: 15rpx;
  display:block;
  width:160rpx;
  height:160rpx;
  margin:20rpx;
  margin-top:50rpx;
  border-radius:50%;
  border:2px solid #fff;
  box-shadow:3px 3px 10px rgba(0,0,0,0.2);
}
.user-name {
  position: absolute;
  top: 100rpx;
  left: 235rpx;
  font-size: 14px;
  color: #fff;
}
.user-fund {
  position: absolute;
  top: 158rpx;
  left: 235rpx;
  font-size: 14px;
  color: #fff;
}
.user-fund text{
  color: #fff;
  margin-right: 15rpx;
  font-size: 12px;
}
.user-fund .num {
  color: #fcce03
}
.order-all {
  padding:20rpx;
  color: #666;
  border-bottom: 1px solid #eee;
  background: #fff;
}
.order-all-icon {
  width: 42rpx;
  height: 42rpx;
  vertical-align: middle;
  margin-right: 10rpx;
}
.lookall {
  height: 42rpx;
  line-height: 42rpx;
  padding-top:10rpx;
}
.sc-order {
  display:flex;
  background: #fff;
  width: 100%;
  font-size: 12px;
  line-height: 16px;
  color: #666;
  padding: 4% 0;
  text-align: center;
}
.sc-order .d-item {
  flex:1;
  text-align: center;
  position: relative
}
.sc-order .d-item .order-icon image {
  width: 24px;
  height: 24px;
  display: inline-block;
}
.sc-order .d-item .order-tip {
  position: absolute;
  right: 25%;
  top:-10rpx;
  width: 13px;
  height: 13px;
  line-height: 13px;
  border-radius:13px; 
  text-align: center;
  display: block;
  color: #fff;
  font-size: 9px;
  background: #fe0000;
}
.profile-list {
  background: #fff;
}
.list-item {
  display: flex;
  align-items: center;
  padding:12rpx 20rpx;
  border-bottom: 1px solid #f2f2f2;
}
.list-item .list-icon {
   width: 42rpx;
   height: 42rpx;
   margin-right: 10rpx;
}
.user-text {
  color: #666;
  line-height: 2;
  flex: 1;
}
.righthead:after{
  content: '';
  display: inline-block;
  width: 18rpx;
  height: 18rpx;
  border: 3rpx solid #A3A3A3;
  border-bottom: none;
  border-left: none;
  transform: rotate(45deg);
}